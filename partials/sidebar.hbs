<!-- Sidebar -->
<aside class="col-md-3 sidebar">
  <div class="widget about-blog text-center">
    <div class="heading-lines">
      <h3 class="widget-title heading">About Me</h3>
    </div>
    <img src="{{asset "img/aboutsteph.jpg"}}" alt="" class="side-about-img">
    <p class="mb-20 mt-30">A personal diary of wanderlust and an overflowing wardrobe. Live with passion.</p>
    <img src="{{asset "img/signature.png"}}" alt="">
  </div>

  <!-- Newsletter -->
  <div class="widget newsletter">
    <div class="heading-lines">
      <h3 class="widget-title heading">Newsletter</h3>
    </div>
    <form class="relative newsletter-form">
      <input type="email" placeholder="Your email address">
    </form>
    <input type="submit" value="Subscribe" id="submit-button" class="btn btn-lg btn-color">
  </div>

  <!-- Instagram Feed Grid -->
  <div class="widget instagram">
    <div class="heading-lines">
      <h3 class="widget-title heading">Instagram</h3>
    </div>
    <ul id="instafeed-grid"></ul>
  </div>

  <!-- Categories -->
  <div class="widget categories">
    <div class="heading-lines">
      <h3 class="widget-title heading">Categories</h3>
    </div>
    {{#get "tags" limit="5" include="count.posts" order="count.posts desc"}}
        <ul class="list-dividers">
            {{#foreach tags}}
                <li><a href="/tag/{{slug}}">{{name}} <span>({{count.posts}})</span></a></li>
            {{/foreach}}
        </ul>
    {{/get}}
  </div>

  <!-- Ad banner -->
  <div class="widget custom-ad-banner">
    <a href="#">
      <img src="img/banner.jpg" alt="">
    </a>
  </div>

  <!-- Recent Posts -->
  <div class="widget recent-posts">
    <div class="heading-lines">
      <h3 class="widget-title heading">Recent Posts</h3>
    </div>
    <div class="entry-list w-thumbs">
      {{#get "posts" limit="5" order="published_at desc"}}
        <ul class="posts-list list-dividers">
          {{#foreach posts}}
            <li class="entry-li">
              <article class="post-small clearfix">
                <div class="entry-img">
                  <a href="{{url}}">
                    <img src="{{img_url feature_image}}" alt="">
                  </a>
                </div>
                <div class="entry">
                  <h3 class="entry-title"><a href="magazine-single-article.html">{{title}}</a></h3>
                  <ul class="entry-meta list-inline">
                    <li class="entry-date">
                      <a href="{{url}}">{{date published_at format="MMMM DD, YYYY"}}</a>
                    </li>
                  </ul>
                </div>
              </article>
            </li>
          {{/foreach}}
        </ul>
      {{/get}}

    </div>
  </div>

  <!-- Latest Tweets -->
  <div class="widget categories">
    <div class="heading-lines">
      <h3 class="widget-title heading">Latest Tweets</h3>
    </div>
    <div class="twitter-slider text-center">
      <i class="fa fa-twitter twitter-icon"></i>
      <a href="https://twitter.com/wellprodubai">@wellprodubai</a>
      <div id="tweets"></div>
    </div>
  </div>

</aside> <!-- end sidebar -->
