{{!< default}}

{{! Tags Context Docs: https://themes.ghost.org/docs/tags }}

{{#tag}}
<section class="banner">
	<h1>{{name}}</h1>
	<h2>
		{{#if description}}
			{{description}}
		{{else}}
			A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
		{{/if}}
	</h2>
	{{#if feature_image}}
		<img src="{{feature_image}}" alt="{{name}}">
	{{/if}}
</section>
{{/tag}}

<section class="posts">
	{{> loop}}
</section>
